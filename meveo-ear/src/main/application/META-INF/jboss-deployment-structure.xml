<jboss-deployment-structure>
    <deployment>
        <exclusions>
            <module name="org.jboss.resteasy.resteasy-jackson-provider"/>
            <module name="org.apache.httpcomponents.core"/>
        </exclusions>
        <dependencies>
            <module name="org.jboss.resteasy.resteasy-jackson2-provider" services="import"/>
            <module name="org.infinispan" export="true"/>
            <module name="org.infinispan.commons" services="export"/>
            <module name="com.fasterxml.jackson.core.jackson-core"/>
            <module name="com.fasterxml.jackson.core.jackson-databind"/>
            <module name="com.fasterxml.jackson.core.jackson-annotations"/>
            <module name="org.apache.commons.io" export="true" />
            <module name="org.apache.commons.collections" export="true"/>
            <module name="org.apache.commons.codec" export="true"/>
            <module name="org.apache.commons.beanutils" export="true"/>
            <module name="org.apache.commons.lang" export="true"/>
            <module name="javax.validation.api"/>
            <module name="org.jboss.ejb3"/>
            <module name="org.yaml.snakeyaml"/>
            <module name="org.keycloak.keycloak-adapter-core"/>
            <module name="org.keycloak.keycloak-core" export="true"/>
            <module name="org.jboss.vfs"/>
            <module name="org.dom4j" export="true"/>
            <module name="org.postgresql" export="true"/>
        </dependencies>
    </deployment>
</jboss-deployment-structure>