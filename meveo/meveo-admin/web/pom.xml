	<artifactId>meveo-admin-web</artifactId>
	<version>6.0</version>
	<name>Meveo Admin Web Application - Web Module</name>
	<packaging>war</packaging>

	<build>
		<finalName>meveo</finalName>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<excludes>
					<exclude>**/import-*.sql</exclude>
					<exclude>**/jasper/**/*</exclude>
					<exclude>**/invoiceAdjustment/**/*</exclude>
				</excludes>
				<filtering>true</filtering>
			</resource>
			<resource>
				<directory>src/main/resources/jasper</directory>
				<includes>
					<include>**/*</include>
				</includes>
				<targetPath>./jasper</targetPath>
				<filtering>false</filtering>
			</resource>
			<resource>
				<directory>src/main/resources/invoiceAdjustment</directory>
				<includes>
					<include>**/*</include>
				</includes>
				<targetPath>./invoiceAdjustment</targetPath>
				<filtering>false</filtering>
			</resource>
		</resources>

		<plugins>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
				<version>2.1</version>
				<configuration>
					<packagingExcludes>**/import*.sql</packagingExcludes>
					<failOnMissingWebXml>false</failOnMissingWebXml>
					<archive>
						<manifestFile>src/main/resources/META-INF/MANIFEST.MF</manifestFile>
					</archive>
				</configuration>
				<executions>
					<execution>
						<id>prepare-war</id>
						<phase>prepare-package</phase>
						<goals>
							<goal>exploded</goal>
						</goals>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<artifactId>maven-antrun-plugin</artifactId>
				<!--<configuration>-->
					<!--<tasks>-->
						<!--<copy file="../lib/flatworm-3.0.2.jar" tofile="${project.build.directory}/meveo/WEB-INF/lib/flatworm-3.0.2.jar" />-->
					<!--</tasks>-->
				<!--</configuration>-->
				<executions>
					<execution>
						<phase>prepare-package</phase>
						<configuration>
							<target>
								<copy file="../lib/flatworm-3.0.2.jar" tofile="${project.build.directory}/meveo/WEB-INF/lib/flatworm-3.0.2.jar" />
								<copy file="src/main/resources/import-${dbtype}.sql" tofile="${project.build.directory}/meveo/WEB-INF/classes/import.sql" />
							</target>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>buildnumber-maven-plugin</artifactId>
				<version>1.3</version>
				<executions>
					<execution>
						<phase>validate</phase>
						<goals>
							<goal>create</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<doCheck>false</doCheck>
					<doUpdate>false</doUpdate>
					<shortRevisionLength>41</shortRevisionLength>
				</configuration>
			</plugin>

			<plugin>
				<groupId>com.google.code.maven-replacer-plugin</groupId>
				<artifactId>replacer</artifactId>
				<version>1.5.3</version>
				<executions>
					<execution>
						<phase>prepare-package</phase>
						<goals>
							<goal>replace</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<includes>
						<!-- <include>${project.build.directory}/**/persistence.xml</include> -->
						<!--<include>${project.build.directory}/**/layout/*.xhtml</include> -->
						<include>${project.build.directory}/meveo/layout/*.xhtml</include>
						<include>${project.build.directory}/meveo/about.xhtml</include>
					</includes>
					<replacements>
						<replacement>
							<!--suppress UnresolvedMavenProperty -->
							<token>@VERSION_NUMBER@</token>
							<value>${project.version}</value>
						</replacement>
						<replacement>
							<!--suppress UnresolvedMavenProperty -->
							<token>@BUILD_NUMBER@</token>
							<value>${buildNumber}</value>
						</replacement>
					</replacements>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-resources-plugin</artifactId>
				<version>2.4</version>
				<configuration>
					<encoding>${project.build.sourceEncoding}</encoding>
				</configuration>
			</plugin>
		</plugins>
	</build>
