<page xmlns="http://jboss.com/products/seam/pages"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.1.xsd">
    <restrict>#{persistentPermissionResolver.hasPermission('catalog','catalogManagement') or (!edit and persistentPermissionResolver.hasPermission('catalog','catalogVisualization'))}</restrict>    
    
	 <param name="edit"/>
	 <navigation>
		  <rule if-outcome="addNew">
		    	<redirect view-id="/pages/catalog/invoiceSubCategories/invoiceSubCategoryDetail.xhtml">
			     	<param name="invoiceCategoryId" value="#{invoiceCategory.id}"/>
					<param name="backView" value="invoiceCategoryDetail"/>
					<param name="edit" value="true"/>
		    	</redirect>
		   </rule>
	 </navigation>
    
</page>